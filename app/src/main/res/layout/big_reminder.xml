<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:columnCount="7"
		android:rowCount="5">

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/title"
			android:layout_row="0"
			android:layout_column="0"
			android:layout_columnSpan="7"/>

		<TimePicker
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/timePicker"
			android:layout_row="1"
			android:layout_column="0"
			android:layout_columnSpan="7"/>

		<ToggleButton
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="Mo"
			android:id="@+id/mo"
			android:layout_row="2"
			android:layout_column="0"
			android:textOff="Mo"
			android:textOn="Mo"/>

		<ToggleButton
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="Di"
			android:id="@+id/di"
			android:layout_row="2"
			android:layout_column="1"
			android:textOff="Di"
			android:textOn="Di"/>

		<ToggleButton
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="Mi"
			android:id="@+id/mi"
			android:layout_row="2"
			android:layout_column="2"
			android:textOff="Mi"
			android:textOn="Mi"/>

		<ToggleButton
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="Do"
			android:id="@+id/don"
			android:layout_row="2"
			android:layout_column="3"
			android:textOff="Do"
			android:textOn="Do"/>

		<ToggleButton
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="Fr"
			android:id="@+id/fr"
			android:layout_row="2"
			android:layout_column="4"
			android:textOff="Fr"
			android:textOn="Fr"/>

		<ToggleButton
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="Sa"
			android:id="@+id/sa"
			android:layout_row="2"
			android:layout_column="5"
			android:textOff="Sa"
			android:textOn="Sa"/>

		<ToggleButton
			android:layout_width="50dp"
			android:layout_height="wrap_content"
			android:text="So"
			android:id="@+id/so"
			android:layout_row="2"
			android:layout_column="6"
			android:textOn="So"
			android:textOff="So"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Save"
			android:id="@+id/save"
			android:layout_row="4"
			android:layout_column="0"
			android:layout_columnSpan="2"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Delete"
			android:id="@+id/delete"
			android:layout_row="4"
			android:layout_column="5"
			android:layout_columnSpan="2"/>
	</GridLayout>
</LinearLayout>